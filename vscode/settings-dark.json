{
    "workbench.colorTheme": "Pop Dark",
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "vscode-icon-theme",
    "editor.minimap.enabled": false,
    "files.hotExit": "off",
    "editor.fontSize": 21,
    "editor.wordWrap": "on",    
    "window.zoomLevel": 1,
    "glassit.alpha": 240,
    "editor.fontFamily": "VT323, Consolas, 'Courier New', monospace",
    "scm.inputFontFamily": "VT323, Consolas, 'Courier New', monospace",
    "debug.console.fontFamily": "VT323, Consolas, 'Courier New', monospace",
    "terminal.integrated.fontSize": 20,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.excludeDirty": true,
    "workbench.editor.limit.value": 7,
    "window.titleBarStyle": "custom"
}
